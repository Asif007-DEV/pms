<%-include('header') %>

    <div class="container">
        <div class="row">
          <div id="signupbox" style="margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="panel panel-info">
              <div class="panel-heading">
                <div class="panel-title"><%= title %></div>
                <div style="float: right; font-size: 85%; position: relative; top: -10px;" ></div>
              </div>
              <div class="panel-body">
                <form action="/AddNewCategory" id="addNewCateoryForm" class="form-horizontal" role="form" method="post">
                  <% if(errors != ''){%>
                    <p style="text-align: center; color: red;"><%= errors.passwordCategory.msg %></p>
                  <%}else{%>
                    <p style="text-align: center; color: green;"><%= success %></p>
                  <%} %>
                  <div class="form-group">
                    <label for="username" class="col-md-3 control-label">Category Name</label>
                    <div class="col-md-9">
                      <input type="text" class="form-control" name="passwordCategory" placeholder="Enter your password Category name">
                    </div>
                  </div>
    
                  <div class="form-group">
                    <label class="col-md-3 control-label"></label>
                    <div class="col-md-9">
                      <input type="submit" type="button" class="btn btn-info" value="Add Category">
                    </div>
                  </div>
                  <p><a href="/categoryList">View All Category List</a></p>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    
    
  </body>
</html>
